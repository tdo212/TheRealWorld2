<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<!-- Root container -->
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.therealworld.fitschedule.controllers.GoalsController">

    <!-- Center everything inside the AnchorPane -->
    <HBox prefHeight="200" prefWidth="400" spacing="20" alignment="CENTER"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Left VBox with border -->
        <VBox prefWidth="400" prefHeight="200" alignment="TOP_LEFT"
              style="-fx-border-color: blue; -fx-border-width: 2; -fx-padding: 20;">
            <Label text="Left Box" />
            <Button text="Button 1" />
        </VBox>

        <!-- Right VBox with border -->
        <VBox prefWidth="200" prefHeight="200" alignment="CENTER"
              style="-fx-border-color: green; -fx-border-width: 2; -fx-padding: 20;">
            <Label text="Right Box" />
            <Button text="Button 2" />
        </VBox>
    </HBox>

    <!-- Bottom HBox centered -->
    <HBox layoutY="220" prefHeight="100" prefWidth="400" alignment="CENTER"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          style="-fx-border-color: red; -fx-border-width: 2; -fx-padding: 10;">
        <Label text="Bottom Box Content" />
    </HBox>

</AnchorPane>
